# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Static pages
GET         /api                                    controllers.StaticController.api

# Report API
POST         /api/reports                           controllers.ReportingController.createReporting()
GET          /api/reports/stats                     controllers.ReportingController.getStatistics()

# Company API
GET         /api/companies/suggest/:search          controllers.CompanyController.getSuggestions(search)
GET         /api/companies/nearby/                  controllers.CompanyController.getNearbyCompanies(lat, long, radius: Double ?= 5, maxCount: Int ?= 10)
GET         /api/companies/:search                  controllers.CompanyController.getCompanies(search, postalCode: Option[String], maxCount: Int ?= 10)